<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">


    <TextView
        android:id="@+id/section_label"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginEnd="82dp"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="82dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="Welcome to Ideal face world cup !!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/worldcupbtn"
        android:layout_width="161dp"
        android:layout_height="91dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:layout_marginTop="68dp"
        android:drawableTop="@drawable/ic_dicegame"
        android:text="Play Worldcup"
        android:paddingTop="15dp"
        android:textColor="@color/white"
        android:background="@drawable/round_edge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_btn" />

    <Button
        android:id="@+id/map_btn"
        android:layout_width="158dp"
        android:layout_height="96dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:layout_marginTop="60dp"
        android:drawableTop="@drawable/ic_map"
        android:paddingTop="15dp"
        android:text="Show KAIST map"
        android:textColor="@color/white"
        android:background="@drawable/round_edge"
        android:textColorHint="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/section_label"
        app:layout_constraintVertical_chainStyle="packed" />


</android.support.constraint.ConstraintLayout>